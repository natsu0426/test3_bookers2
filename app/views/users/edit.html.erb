<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %>errors prohibited this obj form being saved:</h3>
        <% @user.errors.full_messages.each do |message| %>
          <ul>
            <li><%= message %></li>
          </ul>
        <% end %>
      <% end %>
      <%= form_with model: @user, local:true do |f| %>

        <div class="form-group">
          <lavel for="inputName">Name</lavel><br>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
        </div>

        <div class="form-group">
          <lavel for="inputImage">Image</lavel><br>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        </div>

        <div class="form-group">
          <lavel for="inputIntoroduction">Introduction</lavel><br>
          <%= f.text_area :introduction %>
        </div>

        <div class="form-group">
          <%= f.submit "Update User", class: 'btn btn-secondary' %>
        </div>

      <% end %>
    </div>
  </div>
</div>